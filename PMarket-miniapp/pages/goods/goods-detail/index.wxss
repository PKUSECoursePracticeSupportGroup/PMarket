/* pages/goods/goods-detail/index.wxss */

.userinfo-avatar {
  width: 150rpx;
  height: 150rpx;
  margin-right: 20rpx;
  border-radius: 50%;
}

.img-box {
  display:flex;
  justify-content:center;
  align-items:center;
}

.container {
  padding-bottom: 100rpx;
}

.goods-box {
height: 200rpx;
background-color: #fff;
margin-bottom: 20rpx;
align-items: center;
padding: 20rpx;
}

.goods-box .img-box {
width: 200rpx;
height: 200rpx;
}

.goods-box .img-box image {
width: 200rpx;
height: 200rpx;
}


.goods-info {
  display: inline-block;
  margin: 20px;
  padding: 1em 2em;
  background: transparent;
  border: 2px;
  border-radius: 3px;
  font-weight: 400;
  text-align: center;
  box-shadow: 0px 2px 4px #67c0f0,0px 1px 2px #bf2fcb;
}

.goods-info .price {
  font-size: 28rpx;
  color: #ef8203
}

.goods-info .desc {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
}

.remove{
  width:80%;
  margin-top:50rpx;
  background-color: rgb(106, 0, 95);
  color: white;
  border-radius: 98rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
}

.collect{
  width:80%;
  margin-top:40rpx;
  background-color: rgb(214, 167, 12);
  color: white;
  border-radius: 98rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
}
.divLine{
  background: #aa0a0f;
  width: 100%;
  height: 3rpx;
 }

 
  
.a-box {
  height: 20rpx;
  background-color: #fff;
  margin-bottom: 20rpx;
  align-items: center;
  padding: 20rpx;
  }

  .a-box .avatar {
    width: 50%;
    height: 50%;
  }
  
  .a-box .avatar image {
  width: 20rpx;
  height: 20rpx;
  margin: auto;
  }
  
